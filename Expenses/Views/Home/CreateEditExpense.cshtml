@{
    ViewData["Title"] = "Create / Edit";
}

@model Expenses.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit an expenses</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">
    <input hidden type="number" placeholder="0" class="form-control" asp-for="Id" />

    <label mt-4>Value ZAR</label>
    <input type="number" placeholder="0" class="form-control" asp-for="Value" step="0.01" />

    <label mt-4>Description</label>
    <input type="text" placeholder="Enter a description..." class="form-control" asp-for="Description" />

    <button class="btn btn-primary mt-4" type="submit">Ok</button>

</form>